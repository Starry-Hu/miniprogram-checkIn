<!--index.wxml-->
<view class="page">
	<view class="page__hd">
		<view class="container topImg">
			<image src="../../images/clock.jpg" mode="widthFix"></image>
		</view>

		<view class="weui-form__control-area" bindsubmit="formSubmit">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells__title">登录</view>
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">账号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写用户账号" name="userId" placeholder-class="weui-input__placeholder" bindchange="idChange" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">密码</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写用户密码" name="userPassword" type="password" placeholder-class="weui-input__placeholder" bindchange="pswChange" />
						</view>
					</view>
				</view>
			</view>
			<view class="button-sp-area">
				<a class="weui-btn weui-btn_primary" formType="submit" bindtap="login">确定</a>
			</view>
			<view class="weui-form__extra-area">
				<view class="weui-footer">
					<view class="weui-footer__links">
						<a href="javascript:" class="weui-footer__link" bindtap="register">没有账号？点击注册</a>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>