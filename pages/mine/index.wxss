/* 用户微信情况显示 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.weui-cells__title{
  font-size: medium;
}
/* 单选框的行显示 */
.radioView{
  display: inline-block;
  padding-right: 40rpx;
}

/* 提交按钮的上下margin */
.button-sp-area{
  margin: 30rpx 0;
}
