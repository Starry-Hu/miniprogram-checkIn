<view class="page">
	<view class="page__bd">
    <view class="weui-panel">
			<view class="weui-panel__hd">今日打卡任务</view>
      <!-- 具体的打卡任务 -->
			<view class="weui-panel__bd">
				<view class="weui-media-box weui-media-box_small-appmsg">
					<view class="weui-cells">
						<a class="weui-cell weui-cell_active weui-cell_access weui-cell_example">
							<view class="weui-cell__hd">
                <image class="taskImg" src="../../images/check/doneTask.png"></image></view>
							<view class="weui-cell__bd weui-cell_primary">
								<view>早起</view>
							</view>
							<text class="weui-cell__ft"></text>
						</a>
						<a class="weui-cell weui-cell_active weui-cell_access weui-cell_example">
							<view class="weui-cell__hd">
                <image class="taskImg" src="../../images/check/todoTask.png"></image></view>
							<view class="weui-cell__bd weui-cell_primary">
								<view>早睡</view>
							</view>
							<text class="weui-cell__ft"></text>
						</a>
					</view>
				</view>
			</view>
		</view>
  </view>

    <!--添加创建新活动-->
  <view class="addBtn" bindtap="add">
    <image src="../../images/check/add.png" ></image>
  </view>
</view>